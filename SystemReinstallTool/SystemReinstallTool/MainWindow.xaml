<Window x:Class="SystemReinstallTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemReinstallTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnStartBackup" Content="开始备份" HorizontalAlignment="Left" Margin="10,289,0,0" VerticalAlignment="Top" Width="75" Click="btnStartBackup_Click"/>
        <Button x:Name="btnStartRestore" Content="开始恢复" HorizontalAlignment="Left" Margin="432,289,0,0" VerticalAlignment="Top" Width="75" Click="btnStartRestore_Click"/>
        <TextBox x:Name="tbBackupPath" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="417" TextChanged="tbBackupPath_TextChanged"/>
        <Button x:Name="btnChooseBackupPath" Content="选择" HorizontalAlignment="Left" Margin="432,9,0,0" VerticalAlignment="Top" Width="75" Click="btnChooseBackupPath_Click"/>
        <TextBlock x:Name="tbConsole" HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" Text="123123123123" VerticalAlignment="Top" Height="246" Width="497" Background="#FFEDFFFD"/>

    </Grid>
</Window>
